FROM golang:1.25 AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o sipograf .

FROM gcr.io/distroless/base-debian12
WORKDIR /app
COPY --from=builder /app/sipograf /app/sipograf
COPY --from=builder /app/public /app/public
COPY --from=builder /app/views /app/views
EXPOSE 8080
USER nonroot:nonroot
CMD ["/app/sipograf"]
